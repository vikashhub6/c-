

  #include <iostream>
using  namespace std ;     

int main() {
     int array[4][4];
     cout << "enter the element of array " ;
      
      for ( int i = 0 ; i <4; i++)
        { for (int j=0 ; j< 4; j++)
            cin >> array[i][j] ; 
        }
         

       
      for ( int i = 3 ; i >=0; i--)
        { for (int j=0 ; j< 4; j++)
             {
                 array[j][i] = array[3-i][j]; // N-1- I 
             }  
        }
         // wee can either create new array can we use prevous array //just to ssubtite prevous one
         
        
     for ( int i = 0 ; i <4; i++)
        { for (int j=0 ; j< 4; j++)
            cout << array[i][j]<<" " ; 
        }

    return 0;
}   
    
